{
  "name": "aws-iot-kickstarter",
  "version": "0.0.0",
  "workspaces": [
    "packages/*/*",
    "packages/ui/sputnik-ui-angular/projects/*",
    "packages/**/@lambda",
    "kickstarter/*"
  ],
  "private": true,
  "description": "Monorepo for project deathstar",
  "scripts": {
    "build": "yarn build:lambdas && yarn build:packages",
    "build:packages": "lerna run 'build' --stream --no-private",
    "build:lambdas": "lerna run --stream 'build' --scope @lambda/*",
    "build:angular": "lerna run --stream 'build' --scope sputnik-ui-angular",
    "watch": "lerna run --parallel 'watch' --no-private",
    "watch:since": "lerna run --parallel 'watch' --no-private --since",
    "clean": "lerna run --parallel 'clean' && (jest --clearCache &> /dev/null) || exit 0;",
    "clean:deep": "(yarn clean &> /dev/null) && (find . -type d -name node_modules -exec rm -rf {} \\; &> /dev/null) || exit 0;",
    "commit": "git-cz",
    "fix": "yarn lint --fix",
    "lint": "export NODE_OPTIONS=\"--max-old-space-size=6144\" && eslint '**/*.{ts,tsx}'",
    "prerelease": "yarn build && yarn test && yarn lint",
    "release": "yarn version:release",
    "version:release": "lerna version --conventional-commits --force-git-tag",
    "version:prerelease": "lerna version --conventional-commits --conventional-prerelease",
    "version:graduate": "lerna version --conventional-commits --conventional-graduate",
    "test": "jest --runInBand",
    "tsc": "tsc",
    "hygen": "hygen",
    "create-package": "hygen package new",
    "upgrade:cdk": "export CDK_VERSION=$1 && yarn upgrade --scope @aws-cdk@$CDK_VERSION --exact && yarn upgrade aws-cdk@$CDK_VERSION --exact  && lerna run --parallel 'yarn upgrade --scope @aws-cdk@$CDK_VERSION --exact'"
  },
  "homepage": "https://github.com/aws-samples/aws-iot-kickstart",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-samples/aws-iot-kickstart"
  },
  "author": "Timothee Cruse <timothee.cruse@gmail.com>",
  "contributors": [
    "Timothee Cruse <timothee.cruse@gmail.com>",
    "Jeremy Jonas <jay.jonas@hotmail.com>",
    "Greg Varga <contact@gergelyvarga.com>",
    "Mirash Gjolaj <mirash.gjolaj@gmail.com>"
  ],
  "license": "Apache-2.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "resolutions": {
    "eslint": "^7.3.1",
    "jest": "^25.5.4",
    "@angular-devkit/build-angular": "~0.803.29",
    "@angular-devkit/build-ng-packagr": "~0.803.29",
    "@angular/animations": "~8.2.14",
    "@angular/cli": "~8.3.29",
    "@angular/common": "~8.2.14",
    "@angular/compiler": "~8.2.14",
    "@angular/compiler-cli": "~8.2.14",
    "@angular/core": "~8.2.14",
    "@angular/forms": "~8.2.14",
    "@angular/language-service": "~8.2.14",
    "@angular/platform-browser": "~8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.14",
    "@angular/router": "~8.2.14",
    "ng-packagr": "^5.4.0",
    "protractor": "~7.0.0",
    "ts-jest": "25",
    "ts-node": "^8.1.0",
    "tsickle": "^0.39.1",
    "typescript": "^3.9.5",

    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "rxjs": "~6.4.0"
  },
  "dependencies": {
    "@types/js-yaml": "^3.12.5",
    "@types/semver": "^7.3.1",
    "commitlint": "^9.1.0",
    "dotenv": "^8.2.0",
    "enquirer": "2.3.5",
    "find-up": "^4.1.0",
    "husky": "^4.2.5",
    "hygen": "^5.0.3",
    "lodash": "^4.17.15",
    "parcel": "^1.12.4",
    "semver": "^7.3.2",
    "shorthash": "^0.0.2",
    "source-map-support": "^0.5.16",
    "yaml-cfn": "^0.2.3"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^0.0.1-alpha.32",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.157",
    "@types/node": "10.17.5",
    "@typescript-eslint/experimental-utils": "^3.7.1",
    "@typescript-eslint/typescript-estree": "^3.7.1",
    "jest": "^25.5.4",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "parcel-plugin-externals": "^0.5.1",
    "prettier": "^2.0.5",
    "ts-jest": "25",
    "ts-node": "^8.1.0",
    "tsickle": "^0.39.1",
    "typescript": "^3.9.5"
  }
}
