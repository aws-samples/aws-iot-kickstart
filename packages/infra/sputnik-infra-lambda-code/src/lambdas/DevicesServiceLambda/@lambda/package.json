{
    "private": true,
    "name": "@lambda/devices-service",
    "description": "The devices microservice for the sputnik",
    "main": "libs.js",
    "version": "0.0.0",
    "scripts": {
        "build": "yarn parcel build index.js --target=node --global handler -o dist/index.js --bundle-node-modules",
        "postbuild": "mkdir -p ../../../../dist/@lambda && cd dist && zip -FSrq ../../../../../dist/$npm_package_name.zip *"
    },
    "dependencies": {
        "@lambda/helper-utils": "0.0.0",
        "@lambda/usage-metrics": "0.0.0",
        "moment": "2.24.0",
        "underscore": "1.10.2",
        "node-forge": "0.8.5",
        "shortid": "2.2.14"
    },
    "devDependencies": {
        "aws-sdk": "*"
    },
    "externals": [
        "aws-sdk"
    ],
    "//workspaces": {
        "nohoist": [
            "**/@lambda/helper-utils", "**/@lambda/helper-utils/**",
            "**/@lambda/usage-metrics", "**/@lambda/usage-metrics/**",
            "**/moment", "**/moment/**",
            "**/underscore",  "**/underscore/**",
            "**/node-forge", "**/node-forge/**",
            "**/shortid", "**/shortid/**"
        ]
    }
}
