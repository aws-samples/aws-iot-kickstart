{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["es6"],
    "noEmit": false,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "declarationDir": "lib"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
