{
  "extends": "../../../configs/workspace/tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist",
    // TODO: resolve all typescript recommended issues and remove these settings
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "strictPropertyInitialization": false
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "__test__", "**/*.js", "dist/*"],
  "include": ["**/*.ts"]
}
