{
	// "traceResolution": true,
  "compilerOptions": {
		"target": "es2015",
		"lib": ["es2017", "dom"],
    "module": "esnext",
    "noEmit": false,
    "emitDeclarationOnly": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true,
		// "outDir": "app",
		// "declarationDir": "app",
		// "rootDir": "src/app",
		"typeRoots": [
			"./node_modules/@types",
			"../../../node_modules/@types",
			"../../../@types",
		],

    // TODO: resolve all typescript recommended issues and remove these settings
		"strict": false,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": false,
		"strictPropertyInitialization": false,
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "test", "**/*.spec.*"],
  "include": ["app"],
	// "files": [
	// 	"../../infra/sputnik-infra/stack/nested/identity/constants.ts",
	// 	"../../infra/sputnik-infra/stack/nested/device/management/constants.ts",
	// 	"../../infra/sputnik-infra/stack/nested/identity/UserGroups.ts"
	// ],
	"angularCompilerOptions": {
		"disableTypeScriptVersionCheck": true
	}
}
