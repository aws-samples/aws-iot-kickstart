{
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "access": "public",
      "npmClient": "yarn",
      "allowBranch": ["prerelease/*"]
    },
    "version": {
      "message": "chore(release): publish",
      "push": true
    }
  },
  "ignoreChanges":[
    "**/test/**",
    "**/*.md"
  ]
}
