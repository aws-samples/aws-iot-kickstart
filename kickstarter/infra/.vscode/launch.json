    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug CDK synth",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/cdk",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "sourceMaps": false,
            "skipFiles": [ "<node_internals>/**/*" ],
            "port": 23933,
            "env": {
                "CDK_DEFAULT_ACCOUNT": "DEBUGACCOUNT",
                "CDK_DEFAULT_REGION": "ap-southeast-1",
            },
            "runtimeArgs": [
                "--app",
                "ts-node bin/infra.ts",
            ],
            "args": [
                "synth",
            ],
        }
    ]
}
