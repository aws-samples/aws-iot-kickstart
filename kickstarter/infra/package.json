{
  "private": true,
  "name": "infra",
  "version": "0.0.0",
  "type": "module",
  "bin": {
    "infra": "bin/infra.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "yarn clean && tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "clean": "tsc --build --clean && rm -rf out cdk.out",
    "clean:deep": "yarn clean && find lib -type d -name node_modules -exec rm -rf {} \\;",
    "deploy": "cdk deploy --require-approval never AppStack",

    "prod:pipeline:deploy": "cdk deploy --require-approval never Sputnik-Pipeline",
    "synth": "cdk synth",
    "dev:build": "yarn build",
    "dev:deploy:pipeline": "cdk deploy --require-approval never Sputnik-Pipeline",
    "dev:deploy:persistent": "cdk deploy --require-approval never Sputnik-Persistent",
    "dev:DESTROY:persistent": "cdk destroy Sputnik-Persistent",
    "dev:deploy:app": "cdk deploy --require-approval never SputnikKickstarter",
    "dev:deploy:app:force": "cdk deploy --require-approval never SputnikKickstarter --force",
    "dev:synth:app": "cdk synth SputnikKickstarter",
    "dev:DESTROY:app": "cdk destroy SputnikKickstarter",
    "bootstrap": "CDK_NEW_BOOTSTRAP=3 cdk bootstrap --cloudformationExecutionPolicies arn:aws:iam::aws:policy/AdministratorAccess"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.45.0",
    "aws-cdk": "1.45.0"
  }
}
