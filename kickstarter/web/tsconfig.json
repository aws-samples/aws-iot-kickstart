{
  "compilerOptions": {
		"target": "es2015",
		"lib": ["es2017", "dom"],
    "module": "esnext",
		"moduleResolution": "node",
    "noEmit": true,
    "emitDeclarationOnly": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
		"sourceMap": true,
		"allowJs": true,
		"checkJs": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    // "declaration": false,
    "declaration": false,
		// "declarationDir": ".out",
    // "rootDir": "./src",
    "outDir": ".out",
		"typeRoots": [
			"./node_modules/@types",
			"../../node_modules/@types",
			"../../@types",
		],

    // TODO: resolve all typescript recommended issues and remove these settings
		"strict": false,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": false,
		"strictPropertyInitialization": false,
  },
  "compileOnSave": false,
  "exclude": ["**/node_modules/**", "dist", "test", "**/*.spec.*"],
  "include": [
		"src",
		// https://github.com/angular/angular/issues/20292
		"../../node_modules/@deathstar/sputnik-ui-angular/app",
		"../../node_modules/@deathstar/sputnik-infra/stack/nested/device/management/constants.ts",
		"../../node_modules/@deathstar/sputnik-infra/stack/nested/identity/UserGroups.ts",
		"../../node_modules/@deathstar/sputnik-infra/stack/nested/identity/constants.ts",
		"../../node_modules/@deathstar/sputnik-infra/stack/nested/identity/CognitoPersistentStack/UserGroups.ts",
	],
	"angularCompilerOptions": {
		"disableTypeScriptVersionCheck": true
	}
}
