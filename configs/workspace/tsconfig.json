{
  "compilerOptions": {
    // "traceResolution": true,
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "../../",
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "paths": {
      "@deathstar/*": [
        "packages/core/*/src",
        "packages/core/*",
        "packages/infra/*/src",
        "packages/infra/*",
        "packages/api/*/src",
        "packages/api/*",
        "packages/ui/*/src",
        "packages/ui/*",
        "packages/private/*/src",
        "packages/private/*",
      ],
      "*": ["*", "@types/*"]
    }
  },
  "include": ["jest-dom/extend-expect"]
}
